:80 {
    root * /srv

    handle /text {
        respond "{http.request.remote.host}"
    }

    handle /json {
        respond `{ "ip": "{http.request.remote.host}" }` 200 
        header Content-Type application/json
    }

    file_server

    header {
        X-Real-IP {http.request.remote.host}
    }
}
